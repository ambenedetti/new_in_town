<div class="form">
  <%= simple_form_for @tip do |f| %>
    <%= f.input :title, placeholder: 'Title', label: false %>
    <%= f.input :content, placeholder: "Write your tip here...", label: false, class: 'input-form-create character-count' %>
    <%= f.input :city, placeholder: 'City',label: false %>
    <%= f.association :category, prompt: "Select category",label: false %>
    <%= f.button :submit, "Post Tip", class: 'main-button-form'  %>
  <% end %>
</div>
