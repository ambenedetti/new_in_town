<!--Navbar-->
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <% if user_signed_in? %>
      <li class="nav-item dropdown">
      <%= button_tag current_user.username, class: "user_navbar avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <i class="fas fa-times"></i>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Post a tip", new_tip_path, class: "dropdown-item" %>
          <a class="dropdown-item" href="#">My tips</a>
          <a class="dropdown-item" href="#">Account</a>
          <%= link_to "Log out", destroy_user_session_path, class: "dropdown-item", method: :delete %>
        </div>
      </li>
  <% else %>
    <button class="navbar-icon" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <%= link_to "Sign In", new_user_session_path %>
    </button>
  <% end %>
</div>



