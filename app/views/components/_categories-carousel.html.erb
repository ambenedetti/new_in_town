<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% Category.all.count.times do |index| %>
      <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="<%= 'active' if index == 0 %>"></li>
    <% end %>
  </ol>
  <div class="carousel-inner">
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
    <% Category.all.each do |category| %>

      <% if category == Category.first %>
        <div class="carousel-item active">
          <%= link_to '#', data: { category: category.name, search: "true" }, class: "card-home-section" do %>
            <div class="category-carousel-information">
              <%= image_tag category.image %><br>
              <%= category.name %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="carousel-item">
          <%= link_to '#', data: { category: category.name, search: "true" }, class: "card-home-section" do %>
            <div>
              <%= image_tag category.image %><br>
              <%= category.name %>
            </div>
            <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
