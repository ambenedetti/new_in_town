<!-- new.html.erb -->
<div class="form-container">
  <h1>Report a tip</h1>
  <p>We take this very seriously, please let us know what you found offensive</p>

  <div class="form">
    <%= simple_form_for [@tip, @report] do |f| %>
      <%= f.input :description, label: false, placeholder: "Describe your concern", autocomplete: "off", input_html: { class: 'new-form-borders  mb-4' } %>
      <%= f.association :reason, label: false, prompt: "Select a reason", placeholder: "Select reason", input_html: { class: 'new-form-borders' } %>
      <%= f.button :submit, class: 'main-button-form illustration-anchor' %>
    <% end %>
  </div>
</div>
