<div class="form">
  <%= simple_form_for @question do |f| %>
    <%= f.input :title, placeholder: 'Title', label: false %>
    <div class="form-group string required question_city">
      <%= f.input :city, placeholder: 'City', input_html: { class: 'form-control string required' } %>
      <ul id="results"><p class='list-city-question'></p></ul>
    </div>
    <%= f.association :category, prompt: "Select category",label: false %>
    <%= f.button :submit, "Post Question", class: 'main-button-form'  %>
  <% end %>
</div>
