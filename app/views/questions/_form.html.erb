<div class="form">
  <%= simple_form_for @question do |f| %>
    <%= f.input :title, placeholder: 'Title', label: false %>
    <%= f.input :city, placeholder: 'City',label: false %>
    <%= f.association :category, prompt: "Select category",label: false %>
    <%= f.button :submit, "Post Question", class: 'main-button-form'  %>
  <% end %>
</div>
